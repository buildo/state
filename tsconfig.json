{
  "compilerOptions": {
    "strict": true,
    "outDir": "./lib",
    "declaration": true,
    "target": "ES5",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": false,
    "alwaysStrict": true,
    "jsx": "react",
    "removeComments": true,
    "lib": [
      "dom", "es6"
    ]
  },
  "include": [
    "src/**/*",
    "typings"
  ],
  "exclude": [
    "node_modules"
  ]
}
